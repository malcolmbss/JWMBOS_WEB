<!DOCTYPE html>
<html style="height:100%;">
<body style="margin:0; height:100vh;">

<div id="container" style="display:flex; width:100%; height:100%;">
  <div id="left" style="width:15%; background:#ddd;">Left</div>
  <div id="divider" style="width:6px; background:#888; cursor:col-resize;"></div>
  <div id="right" style="width:85%; background:#eee;">Right</div>
</div>

<script>
  const divider = document.getElementById('divider');
  const left = document.getElementById('left');
  const right = document.getElementById('right');
  const container = document.getElementById('container');

  let dragging = false;

  divider.onmousedown = () => dragging = true;
  document.onmouseup = () => dragging = false;

  document.onmousemove = e => {
    if (!dragging) return;
    const rect = container.getBoundingClientRect();
    const pct = ((e.clientX - rect.left) / rect.width) * 100;
    if (pct < 5 || pct > 95) return;
    left.style.width = pct + '%';
    right.style.width = (100 - pct) + '%';
  };
</script>

</body>
</html>
